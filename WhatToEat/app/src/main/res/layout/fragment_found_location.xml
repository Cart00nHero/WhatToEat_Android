<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8DC">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/foundLoc_bg_imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/image_building" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/foundLoc_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@+id/foundLoc_bg_imageView"
        app:layout_constraintBottom_toBottomOf="@+id/foundLoc_bg_imageView"
        app:layout_constraintStart_toStartOf="@+id/foundLoc_bg_imageView"
        app:layout_constraintEnd_toEndOf="@+id/foundLoc_bg_imageView"
        android:background="#80F5FFFA"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />

</androidx.constraintlayout.widget.ConstraintLayout>